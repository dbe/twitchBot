= form_for @viewer do |f|
  - if @viewer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@viewer.errors.count, "error")} prohibited this viewer from being saved:"
      %ul
        - @viewer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
