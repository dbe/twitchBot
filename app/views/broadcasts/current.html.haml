.row#current-broadcast-page
  .col-md-12
    - if @broadcast
      .row#viewer-info
        .col-md-4
          %p#viewer
            Submitted by:
            = link_to @broadcast.viewer.name, @broadcast.viewer
        .col-md-4.col-md-offset-4
          %p#paid
            Paid
            %b
              = "#{@broadcast.paid}"
            Dongerinos
    .row#broadcast
      .col-md-12
        %h1.panel
          = @broadcast ? @broadcast.message : 'There are no broadcasts'
    .row#general-info
      .col-md-4
        = link_to "View Past Broadcasts", broadcasts_path
      .col-md-4.col-md-offset-4#faq-info
        %p#faq-note
          Get your message here!
        = link_to 'Find out how.', '#', :class => 'btn btn-primary', :id => 'faq-button'

