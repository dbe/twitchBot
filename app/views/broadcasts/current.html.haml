.row#current-broadcast-page
  .col-md-12
    - if @broadcast
      = render :partial => 'broadcast', :locals => {:broadcast => @broadcast}
    - else
      %h1
        No Broadcasts yet
    .row#general-info
      .col-md-4
        = link_to "View Past Broadcasts", broadcasts_path
      .col-md-4.col-md-offset-4#faq-info
        %p#faq-note
          Get your message here!
        = link_to 'Find out how.', '#', :class => 'btn btn-primary', :id => 'faq-button'

