.row#broadcast-page
  .col-md-12
    - if @broadcast
      .row
        .col-md-4
          %p#viewer
            Submitted by:
            = link_to @broadcast.viewer.name, @broadcast.viewer
        .col-md-4.col-md-offset-4
          %p#paid
            Paid
            %b
              = "#{@broadcast.paid}"
            Dongerinos
    .row
      .col-md-12
        #broadcast-box
          %h1#broadcast.panel
            = @broadcast ? @broadcast.message : 'There are no broadcasts'
    .row
      .col-md-12
        %p#note
          You can control the text of this broadcast area too!
          = link_to 'Find out how.', '#', :class => 'btn btn-primary', :id => 'faq-button'

